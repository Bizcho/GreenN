<div class='box box-solid'>

  <div class='box-body'>
    <%= link_to '<i class="fa fa-plus"></i> add service'.html_safe, new_service_path, class: 'btn btn-app' %>
    <hr><br>
    <% if !@services.blank? %>              
      <% @services.each do |service| %>
        <div class="box box-solid with-border">
          <div class="col-md-3 ">
            <div class="box-header with-border bg-orange">
              <%= service.name %>
            </div>
            <div class="box-body">
              <p>
                <%= service.description %>
              </p>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>