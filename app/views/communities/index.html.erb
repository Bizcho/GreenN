<div class='box box-solid'>

  <div class='box-body'>
    <%= link_to '<i class="fa fa-plus"></i> add community'.html_safe, new_community_path, class: 'btn btn-app' %>
    <hr>

    <div class="box box-solid">
      <div class="col-md-10 col-md-offset-1">
        <div class="box-header with-border bg-blue">
          <h3>Your Comunities</h3>
        </div>
        <div class="box-body">
          <p>It seems that you have no comunities :c... yet</p>
        </div>
      </div>
    </div>

    <div class="box box-solid">
      <div class="col-md-10 col-md-offset-1">
        <div class="box-header with-border bg-blue">
          <h3>Other Comunities</h3>
        </div>
        <div class="box-body">
          <% if !@communities.blank? %>              
            <% @communities.each do |community| %>
              <div class="box box-solid with-border">
                <div class="col-md-3 ">
                  <div class="box-header with-border bg-olive">
                    <%= community.name %>
                  </div>
                  <div class="box-body">
                    <p>
                      <%= community.description %>
                    </p>
                  </div>
                </div>
              </div>
            <% end %>
          <%else%>
            <%= link_to '<i class="fa fa-plus"></i> add community'.html_safe, new_community_path, class: 'btn btn-app' %>
          <% end %>  
        </div>
      </div>
    </div>

  </div>

</div>