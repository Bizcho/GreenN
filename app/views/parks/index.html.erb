<p id="notice"><%= notice %></p>

<h1>Listing Parks</h1>
<div class='box box-solid'>
  <div class='box-body'>
    <table class="table">
      <thead>
        <tr>
          <th>Name</th>
          <th>Ubication</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @parks.each do |park| %>
          <tr>
            <td><%= park.name %></td>
            <td><%= park.ubication %></td>
            <td><%= link_to 'Show', park %></td>
            <td><%= link_to 'Edit', edit_park_path(park) %></td>
            <td><%= link_to 'Destroy', park, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
</div>
</div>
<br>

